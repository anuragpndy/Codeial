<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width">
        <title><%= title %></title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/noty/3.1.4/noty.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <link rel="stylesheet" type="text/css" href="<%= assetPath('css/layout_style.css') %>">
        <%- style %>
    </head>
    <body>
        <%- include('_header'); %>
        <main id="layout-main">
            <%- body %>
        </main>
        <%- include('_footer'); %>
        <script src="<%= assetPath('javascript/layout_script.js') %>"></script>
        <%- script %>
        <script>
            <% if(flash.success && flash.success.length>0) { %>
                new Noty({
                layout:'topRight',
                theme:'metroui',
                type:'success',
                text: "<%= flash.success %>",  
                timeout:1500       
                }).show();
            <% } %>
            <% if(flash.error && flash.error.length>0) { %>
                new Noty({
                layout:'topRight',
                theme:'metroui',
                type:'error',
                text: "<%= flash.error %>",  
                timeout:1500       
                }).show();
            <% } %>
        </script>
        <script src="https://kit.fontawesome.com/f589ac33f3.js" crossorigin="anonymous"></script>
    </body>
</html>