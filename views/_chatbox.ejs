<% if(locals.user) { %>
<div>
    <div id="chatbox-header">
        <a href="#user-chat-box"><img src="<%= assetPath('image/clipart1128218.png') %>"></a> 
    </div>
    <div id="user-chat-box">
        <a href="#"><i class="fa-solid fa-xmark"></i></a>
        <ul id="chat-messages-list">
            <li class="other-message">
                <span>Other Message</span><sub>Other User Name</sub>
            </li>
            <li class="self-message">
                <span>Self Message</span><sub>Self User Name</sub>
            </li>
        </ul>
        <div id="chat-message-input-container">
            <input id="chat-message-input" placeholder="Type message here ... ">
            <button id="send-message">Send</button>
        </div>
    </div>
</div>
<% } %>